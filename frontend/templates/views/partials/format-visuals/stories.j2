{% do doc.styles.addCssFile('css/components/molecules/format-visual.css') %}
{% do doc.styles.addCssFile('css/components/molecules/format-visual-stories.css') %}
{% do doc.styles.addCssFile('css/components/molecules/code-snippet.css') %}

<div class="ad-m-format-visual ad-m-format-visual-stories">
  <div class="ad-m-format-visual-image ad-m-format-visual-bottom-image">
    <amp-img class="ad--media" src="/static/img/amp-stories-base.png" layout="responsive" width="750" height="1050"></amp-img>
  </div>
  <div class="ad-m-format-visual-image ad-m-format-visual-top-image" title="<amp-story-grid-layer>">
    <amp-img src="/static/img/amp-stories-monde.png" layout="responsive" width="800" height="800"></amp-img>
  </div>
  <div class="ad-m-format-visual-code-snippet">
    {% set code_snippet = '
<amp-story-grid-layer
  template="vertical">
  <amp-img src="moons.jpg"
    width="266" height="340"
    layout="responsive">
  </amp-img>
</amp-story-grid-layer>
    ' %}
    {% set markdown = doc.pod.markdown %}
    {{ markdown.convert('```html\n' + code_snippet + '\n```')|safe }}
  </div>
</div>
