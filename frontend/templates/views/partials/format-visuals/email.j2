{% do doc.styles.addCssFile('css/components/molecules/format-visual-email.css') %}
{% do doc.styles.addCssFile('css/components/molecules/code-snippet.css') %}

<div class="ad-m-format-visual-email">
  <div class="ad-m-format-visual-email-image ad-m-format-visual-email-bottom-image">
    <amp-img src="/static/img/amp-email-base.png" layout="responsive" width="1060" height="1670"></amp-img>
  </div>
  <div class="ad-m-format-visual-email-image ad-m-format-visual-email-top-image" title="<amp-story-grid-layer>">
    <amp-img src="/static/img/amp-email-top.png" layout="responsive" width="883" height="600"></amp-img>
  </div>
  <div class="ad-m-format-visual-email-code-snippet">
    {% set code_snippet = '
<button class="false"
  [class]="clicked"
  on="tap:AMP.setState({
    clicked: !clicked
  })">
</button>
    ' %}
    {% set markdown = doc.pod.markdown %}
    {{ markdown.convert('```html\n' + code_snippet + '\n```')|safe }}
  </div>
</div>
